<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lnrBookListAdapter"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp" >
    	<CheckBox 
    	    android:visibility="gone"
    	    android:id="@+id/chkDownloadBookAdapter"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"/>
    	<RelativeLayout 
    	    android:layout_width="130dp"
    	    android:layout_height="130dp"
    	    android:orientation="horizontal">
	    	    <ImageView 
		    	    android:id="@+id/imgBookImageAdapter"
		    	    android:layout_width="match_parent"
		    	    android:layout_height="match_parent"/>
	    	    <ProgressBar 
	    	        android:id="@+id/prgBookImageCompleteAdapter"
	    	        android:layout_width="64dp"
	    	        android:layout_height="64dp"
	    	        android:layout_centerInParent="true"
	    	        />
    	</RelativeLayout>
    	
    	<LinearLayout 
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:orientation="vertical"
    	    android:layout_gravity="top"
    	    android:layout_margin="5dp">
    	    <TextView 
    	        android:id="@+id/txtBookTitleAdapter"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:textColor="#D60D21"/>
    	    <TextView 
    	        android:id="@+id/txtBookDescAdapter"
    	        android:layout_width="match_parent"
    	        android:layout_height="match_parent"
    	        android:maxLines="6"/>
    	</LinearLayout>
    </LinearLayout>

</LinearLayout>